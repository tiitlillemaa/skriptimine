#!/bin/bash
#
#
echo  -n "sisesta ridade arv: "
read a				#sisestab  a ridade arvuna
echo  -n "sisesta t채rnide arv reas: "
read b				#sisestab b m채rkide arvuna
for (( i=1; i <= a; i++)) # arvutab ridade arv
do

	for (( j = 1 ; j <= b; j++)) # arvutab m채rkide arvu reas
	do
	if [ $i -ge $j ]; then
	echo -n "* "
	else 
	echo -n " "
	fi
	done
echo ""   #t체hi rida
done
